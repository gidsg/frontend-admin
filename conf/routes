# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# authentication endpoints
#GET     /profile                    controllers.Login.profile
GET     /login                      controllers.Login.login
POST    /login                      controllers.Login.loginPost
GET     /openIDCallback             controllers.Login.openIDCallback
GET     /logout                     controllers.Login.logout



# Admin endpoints
GET     /admin/edit/:edition        controllers.AdminController.edit(edition)

GET     /save                       controllers.AdminController.save()
GET     /get                        controllers.AdminController.get()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


